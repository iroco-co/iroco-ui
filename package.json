{
  "name": "@iroco/ui",
  "version": "0.15.3",
  "description": "Iroco design system based on Svelte",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "svelte": "src/index.ts",
  "files": [
    "lib",
    "src",
    "scss"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "build:scripts": "rollup -c",
    "lint": "eslint --max-warnings 3 --ignore-path .gitignore .",
    "copy:styles": "rsync -av --include='*/' --include='**/*.scss' --exclude='*' ./scss/ ./lib/",
    "build": "npm run build:scripts && npm run copy:styles && sass ./scss/iroco.scss ./lib/iroco.css",
    "copy-docs": "rsync -av docs/__DOCS__/dist/iroco-ui/* ../iroco-ui-docs",
    "dev": "rollup -c -w",
    "release": "release-it",
    "prepare": "husky install",
    "clean": "rm -rf lib .svelte-kit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iroco-co/iroco-ui.git"
  },
  "keywords": [
    "iroco",
    "design",
    "system",
    "svelte",
    "components"
  ],
  "author": "Iroco",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/iroco-co/iroco-ui/issues"
  },
  "homepage": "https://github.com/iroco-co/iroco-ui#readme",
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.5",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-typescript": "^8.2.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/svelte": "^3.0.3",
    "@testing-library/user-event": "^13.1.9",
    "@tsconfig/svelte": "^2.0.1",
    "@types/feather-icons": "^4.7.0",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "babel-jest": "^27.0.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.2",
    "eslint-plugin-svelte3": "^3.2.1",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.2",
    "jest": "^26.6.3",
    "lint-staged": "^11.1.2",
    "node-sass": "^7.0.1",
    "npm-watch": "^0.10.0",
    "prettier": "^2.3.1",
    "prettier-plugin-svelte": "^2.3.0",
    "release-it": "^14.9.0",
    "rollup": "^2.52.1",
    "rollup-plugin-scss": "^2.6.1",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.35.1",
    "svelte": "^3.38.2",
    "svelte-jester": "^1.7.0",
    "svelte-preprocess": "^4.7.3",
    "ts-jest": "^26.5.5",
    "typescript": "^4.3.3"
  },
  "peerDependencies": {
    "svelte": ">=3.38.2"
  },
  "lint-staged": {
    "*.{js,ts,svelte}": [
      "eslint"
    ]
  },
  "jest": {
    "rootDir": "test",
    "transform": {
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ],
      "^.+\\.js$": "babel-jest",
      "^.+\\.ts$": "ts-jest"
    },
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|less|scss)$": "babel-jest"
    }
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "svelte,scss,ts"
    },
    "quiet": false
  },
  "dependencies": {
    "feather-icons": "^4.28.0"
  }
}
