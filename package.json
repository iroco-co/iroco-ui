{
  "name": "@iroco/ui",
  "version": "0.3.1",
  "description": "Iroco design system based on Svelte",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "svelte": "src/index.ts",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "build:scripts": "rollup -c",
    "copy:styles": "rsync -av --include='*/' --include='**/*.scss' --exclude='*' ./src/ ./lib/",
    "build": "npm run build:scripts && npm run copy:styles",
    "dev": "rollup -c -w",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iroco-co/iroco-ui.git"
  },
  "keywords": [
    "iroco",
    "design",
    "system",
    "svelte",
    "components"
  ],
  "author": "Iroco",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/iroco-co/iroco-ui/issues"
  },
  "homepage": "https://github.com/iroco-co/iroco-ui#readme",
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.5",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-typescript": "^8.2.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/svelte": "^3.0.3",
    "@testing-library/user-event": "^13.1.9",
    "@tsconfig/svelte": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "babel-jest": "^27.0.2",
    "jest": "^27.0.4",
    "jest-environment-jsdom-global": "^2.0.4",
    "prettier": "^2.3.1",
    "prettier-plugin-svelte": "^2.3.0",
    "release-it": "^14.9.0",
    "rollup": "^2.52.1",
    "rollup-plugin-scss": "^2.6.1",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.35.1",
    "svelte": "^3.38.2",
    "svelte-jester": "^1.7.0",
    "svelte-preprocess": "^4.7.3",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.3"
  },
  "peerDependencies": {
    "svelte": ">=3.38.2"
  },
  "jest": {
    "rootDir": "__test__",
    "transform": {
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ],
      "^.+\\.js$": "babel-jest"
    },
    "testEnvironment": "jest-environment-jsdom-global",
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|less|scss)$": "babel-jest"
    }
  }
}
